<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.windows.multiconversor.MultiConversor"
    android:background="@drawable/fondo"
    >

    <EditText
        android:id="@+id/Etxt_numero"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="16dp"
        android:hint="@string/numero_entrada"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintHorizontal_bias="0.0"
        android:background="@color/claro"
        android:inputType="number"
        android:maxLength="9"
        />

    <TextView
        android:id="@+id/Txtv_conversion"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:text="Resultado"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/Etxt_numero"
        tools:layout_editor_absoluteX="8dp"
        android:layout_marginTop="8dp"
        android:background="#FFFFFF"
        />

    <RadioGroup
        android:id="@+id/rg_anumero"
        android:layout_width="180dp"
        android:layout_height="125dp"
        android:layout_marginRight="32dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="32dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Txtv_conversion"
        android:layout_marginLeft="32dp"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_editor_absoluteY="137dp"
        tools:layout_editor_absoluteX="104dp">

        <RadioButton
            android:id="@+id/radio_adec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="Hexadecimal"
            android:textColor="@color/claro"
            android:textSize="18dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Etxt_numero"

            />

        <RadioButton
            android:id="@+id/radio_abin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="0dp"
            android:text="Binario"
            android:textColor="@color/claro"
            android:textSize="18dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/radioButton" />
        <RadioButton
            android:id="@+id/radio_aoct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="0dp"
            android:text="Octal"
            android:textColor="@color/claro"
            android:textSize="18dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/radioButton" />
    </RadioGroup>

</android.support.constraint.ConstraintLayout>
